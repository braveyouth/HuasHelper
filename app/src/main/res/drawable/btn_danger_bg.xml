<?xml version="1.0" encoding="utf-8"?>

<!-- 警告 按钮 -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下后 -->
    <item
        android:state_pressed="true"
        android:state_enabled="true">

        <shape>
            <!-- 填充的颜色 -->
            <solid
                android:color="@color/btn_danger_pressed"/>

            <corners
                android:radius="@dimen/btn_radius"/>

        </shape>
    </item>

    <!-- 按下前 -->
    <item
        android:state_pressed="false"
        android:state_enabled="true">
        <shape>
            <!-- 填充的颜色 -->
            <solid
                android:color="@color/btn_danger_normal"/>

            <corners
                android:radius="@dimen/btn_radius"/>

        </shape>
    </item>

    <!-- 禁用 -->
    <item
        android:state_enabled="false">
        <shape>
            <!-- 填充的颜色 -->
            <solid
                android:color="@color/btn_enabled"/>

            <corners
                android:radius="@dimen/btn_radius"/>

        </shape>
    </item>
</selector>